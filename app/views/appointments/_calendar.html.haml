- @weekdays.each do |day|
  .day{:class => "color-#{@weekdays.index(day) % 2}"}
    .day-label{:id => day}
      = day.strftime("%A")[0..2]
      = day.to_s.split('-')[1..2].join('/').remove(/\A0/).gsub(/\D(0)/, '/')
    - @appointments.each do |appointment|
      - if appointment.date == day
        .appointment 
          .start_time
            = appointment.start_time
          .end_time
            = appointment.end_time
          .user
            = @user.first_name